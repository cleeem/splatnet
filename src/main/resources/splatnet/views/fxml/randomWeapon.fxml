<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<HBox maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="720.0" prefWidth="1080.0" stylesheets="@../css/schedule.css" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="splatnet.controllers.RandomWeaponController">
   <children>
      <fx:include source="menu.fxml" />
      <HBox style="-fx-background-color: #292e35;" HBox.hgrow="ALWAYS">
         <children>
            <VBox alignment="CENTER" prefHeight="200.0" prefWidth="100.0" spacing="150.0" HBox.hgrow="ALWAYS">
               <children>
                  <HBox alignment="CENTER" spacing="10.0" VBox.vgrow="NEVER">
                     <children>
                        <ImageView fx:id="mainWeaponHolder" fitHeight="150.0" fitWidth="150.0" pickOnBounds="true" preserveRatio="true" />
                        <VBox>
                           <children>
                              <ImageView fx:id="subWeaponHolder" fitHeight="75.0" fitWidth="75.0" pickOnBounds="true" preserveRatio="true" />
                              <ImageView fx:id="specialWeaponHolder" fitHeight="75.0" fitWidth="75.0" pickOnBounds="true" preserveRatio="true" />
                           </children>
                        </VBox>
                     </children>
                  </HBox>
                  <Button mnemonicParsing="false" onMouseClicked="#generateWeapon" text="Random Weapon">
                     <font>
                        <Font name="Splatoon2" size="35.0" />
                     </font>
                  </Button>
               </children>
            </VBox>
         </children></HBox>
   </children>
</HBox>
